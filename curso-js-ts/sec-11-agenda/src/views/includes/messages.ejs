<% if (errors.length > 0) { %>
  <div class="row">
    <div class="col">
      <div class="alert alert-danger">
        <% errors.forEach(e=> { %>
          <%= e %>
            <br>
            <% }) %>
      </div>
    </div>
  </div>
  <% } else if (success.length > 0) { %>
    <div class="row">
      <div class="col">
        <div class="alert alert-success">
          <% success.forEach((s)=> { %>
            <%= s %>
              <br>
              <% }) %>
        </div>
      </div>
    </div>
    <% } %>